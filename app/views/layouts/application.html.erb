<!DOCTYPE html>
<html>
<head>
  <title>SteamApi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>

  <% if signed_in? %>
    <%= image_tag current_user.avatar_url %>
    <p><%= current_user.nickname %></p>
    <%= link_to 'Home', root_path %> |&nbsp
    <%= link_to 'Show my inventory', inventory_path %> |&nbsp
    <%= link_to 'Store', store_index_path %> |&nbsp
    <%= link_to 'Log out', log_out_path %>
  <% else %>
    <%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_noborder.png"), '/auth/steam' %>
  <% end %>

</nav>

<%= yield %>

</body>
</html>
